# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration (PythonAnywhere)
DB_HOST=your-pythonanywhere-mysql-host.pythonanywhere-services.com
DB_PORT=3306
DB_NAME=yourusername$foodbank
DB_USER=yourusername
DB_PASSWORD=your-database-password

# SSH Tunnel (only needed for local development)
SSH_HOST=ssh.eu.pythonanywhere.com
SSH_PORT=22
SSH_USERNAME=yourusername
SSH_PASSWORD=your-ssh-password

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=INFO
